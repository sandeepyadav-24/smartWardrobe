generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model clothing_items{
  id String @id @default(uuid())
  user_id String
  name String
  category String
  image_url String
  favourite Boolean @default(false)
  wears Int @default(0)
  last_worn DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

